{
  "name": "abrusco",
  "description": "Hackable CSS toolbox.",
  "version": "0.5.0",
  "author": "lemmon",
  "license": "MIT",
  "style": "src/master.css",
  "scripts": {
    "build:css": "abrusco src/master.css -o css/abrusco.css",
    "build:minify": "abrusco css/abrusco.css -o css/abrusco.min.css --minify",
    "build": "npm run build:css && npm run build:minify",
    "readme": "sed -i ~previous -E 's/@[0-9]+\\.[0-9]+\\.[0-9]+/@'$npm_package_version'/g' README.md",
    "version": "npm run build && npm run readme && git add package.json README.md css",
    "postversion": "git push && git push --tags && npm publish",
    "w": "abrusco src/master.css -o css/abrusco.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemmon/abrusco.git"
  },
  "keywords": [
    "css",
    "oocss",
    "postcss",
    "design",
    "responsive"
  ],
  "bugs": {
    "url": "https://github.com/lemmon/abrusco/issues"
  },
  "homepage": "https://github.com/lemmon/abrusco#readme",
  "devDependencies": {
    "abrusco-cli": "^0.1.0"
  }
}
